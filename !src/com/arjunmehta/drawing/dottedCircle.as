package com.arjunmehta.drawing {	//dottedCircle Class for AS3 by Arjun Mehta - www.arjunmehta.net	import flash.display.MovieClip;	import flash.display.Graphics;	import flash.display.Shape;	import flash.display.LineScaleMode;	import flash.display.CapsStyle;	import flash.display.JointStyle;	//import leebrimelow's Arc class found at http://code.google.com/p/leebrimelow/source/browse/#svn/trunk/as3/com/theflashblog/drawing	import com.leebrimelow.drawing.Arc;	public class DottedCircle extends MovieClip {		private var dashArcLength:Number;		private var gapArcLength:Number;		private var sx:Number;		private var sy:Number;		private var circumference:Number;		private var circle:MovieClip=new MovieClip();		public function DottedCircle(radius:Number,thickness:Number,gap:Number,color:uint,autoSpace:Boolean) {			circle.graphics.beginFill(color);			if (autoSpace==true) {				circumference=2*Math.PI*radius;				var howMany:int=Math.round(circumference/(thickness+gap));				var leftOverDivided:Number=circumference%(thickness+gap)/howMany;				gap=leftOverDivided+gap;			}			dashArcLength=360*thickness/(2*Math.PI*radius);			gapArcLength=360*gap/(2*Math.PI*radius);			for (var i:Number=0; i<360-dashArcLength; i=i+dashArcLength+gapArcLength) {				sx=radius*Math.cos(i*Math.PI/180);				sy=radius*Math.sin(i*Math.PI/180);				circle.graphics.drawCircle(sx,sy,thickness/2);			}			addChild(circle);		}	}}